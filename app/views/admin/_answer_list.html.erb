<% if question.answers.size != 0 %>
  <table>
    <thead>
      <tr>
        <th>Answer</th>
        <th>is_right</th>
      </tr>
    </thead>
    <tbody>

      <% question.answers.each do |answer| %>
      <tr>
        <td>
          <%= link_to answer.text, edit_answer_path(answer) %>
        </td>
        <td>
          <%= answer.is_right %>
        </td>
        <td>
          <%= link_to 'del', answer_path(answer),
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
      <% end %>

    </tbody>
  </table>
  <br/>
<% end %>
<%= link_to "Add Answer", new_answer_path(:question => question) %><br/><br/>
